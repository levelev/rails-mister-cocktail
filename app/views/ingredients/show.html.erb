<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1>Details about <%= @ingredient.name %></h1>
      <p>Here are the Cocktails you can make with it:</p>

      <ul>
        <% @ingredient.cocktails.each do |cocktail| %>
        <li>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </li>
        <% end %>
      </ul>


    </div>
  </div>
</div>
